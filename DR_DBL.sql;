SELECT 'CREATE OR REPLACE PROCEDURE ' || OWNER || '.DR_DBL AS BEGIN' ||
	 CHR(10) || CHR(13) || 'EXECUTE IMMEDIATE ''DROP DATABASE LINK ' ||
	 OWNER || '.' || DB_LINK || ''';' || CHR(10) || CHR(13) ||
       'END;'|| CHR(10) || CHR(13) ||
	 'EXECUTE '||OWNER||'.DR_DBL;'
	 
  FROM DBA_DB_LINKS        WHERE OWNER <>'PUBLIC'
